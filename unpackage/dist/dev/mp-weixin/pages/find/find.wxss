.find-swiper-img swiper image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.find-swiper-img-text {
  position: absolute;
  margin-top: -130rpx;
  margin-left: 10%;
  font-size: 35rpx;
