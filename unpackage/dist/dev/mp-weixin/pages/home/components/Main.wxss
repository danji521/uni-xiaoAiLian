.main {
  background-color: #F5F5F5;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  margin-top: -33rpx;
  height: calc(100vh - 450rpx);
  position: absolute;
  border-bottom: 33rpx solid #F5F5F5;
}
.scroll-Y {
  height: 90%;
  position: relative;
  top: 82rpx;
}
.main-container {
  margin: 0 auto;
  margin-left: 70rpx;
  padding-bottom: 25rpx;
  width: 90%;
  border-left: 1rpx solid #dddddd;
}
.main-container-up {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx 0;
}
.main-container-up_circular {
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
  margin-left: -20rpx;
  border-radius: 50%;
  border: 10rpx solid #FFFFFF;
  background-color: #FF788C;
}
.main-container-up_date {
  padding-left: 20rpx;
}
.main-container-bt {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 85%;
  margin-left: 55rpx;
  padding: 10rpx 0;
  border-radius: 10rpx;
  background-color: #FFFFFF;
}
.main-container-bt-new {
  width: 100%;
}
.main-container-bt-new image {
  width: 160rpx;
  height: 160rpx;
  margin: 5rpx 2.6%;
  float: left;
}
.main-container-bt-new_text {
  padding: 10rpx;
  font-size: 30rpx;
}
.main-container-bt-new_fabulous {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  padding-right: 30rpx;
  padding-top: 10rpx;
  clear: both;
}
.main-container-bt-new_fabulous view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
